<div class="page-header">
	<h1 class="inquiry-header">リクエスト</h1>
	<p class="inquiry-sub-header">ここに掲載されていないレモンサワーの情報お待ちしております！</p>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
			<% if @inquiry.errors.any? %>
			<div class="alert alert-danger" role="alert">
				<strong>入力内容にエラーがあります</strong>
				<ul>
					<% @inquiry.errors.each do |attr, msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
			<% end %>
			<div class="form-horizontal" role="form">
				<div class="form-group">
					名前<span class="text-danger">（必須）</span>
					<%= f.text_field :name, class: "form-control" %>
				</div>
				<div class="form-group">
					メールアドレス<span class="text-danger">（必須）</span>
					<%= f.email_field :email, class: "form-control" %>
				</div>
				<div class="form-group">
					リクエスト内容
					<%= f.text_area :message, size: "80x10", class: "form-control"%>
				</div>
				<div class="inquiry-confirm-btn">
					<%= f.submit '確認', class: 'btn btn-primary' %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>