<div class="container top-space">
	<div class="row">
		<% if @favorites.empty? %>
		<p class="no-favorite">この商品にまだいいねはありません</p>
		<% else %>
		<% @favorites.each do |favorite| %>
		<div class="col-xs-3">
			<div class="favorite-user-box">
					<div class="user-favorite-image">
						<%= link_to user_path(favorite.user.id) do %>
						<%= attachment_image_tag favorite.user, :profile_image, format: 'jpg', fallback: "no_image_user.jpeg", size: "150x150" %>
						<% end %>
					</div>
					<div class="user-favorite-name">
					ユーザ名
						<%= link_to user_path(favorite.user.id) do %>
						<%= favorite.user.name.truncate(8) %>
						<% end %>
					</div>
					<div  class="user-favorite-counter">
						<%= link_to user_favorites_path(favorite.user.id) do %>
						<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
						お気に入り　<%= favorite.user.favorites.count %> 件
						<% end %>
					</div>
			</div>
		</div>
		<% end %>
		<% end %>
	</div>
	<div class="user-index-buttom">
		<%= link_to "一覧へ戻る", products_path, class: "btn btn-default" %>
	</div>
</div>